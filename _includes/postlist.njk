{% for post in postslist | reverse %}
  <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    <em>
        {{ post.date | readableDate }}
        {% if post.data.author %} 
            &mdash; {{ post.data.author }} {% if post.data.author2 %}and {{ post.data.author2 }}{% endif %}
        {% endif %}
    </em>
{% endfor %}
